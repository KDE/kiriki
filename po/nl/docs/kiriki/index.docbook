<chapter id="configuration"
><title
>Spelconfiguratie</title
> <!-- do not change this! -->

<screenshot>
<mediaobject>
<imageobject>
<imagedata fileref="configuration.png" format="PNG"/>
</imageobject>
<textobject>
<phrase
>Spelconfiguratie</phrase>
</textobject>
</mediaobject>
